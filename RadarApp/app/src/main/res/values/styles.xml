<resources>

    <style name="Theme.Br" parent="@style/Theme.AppCompat.Light">
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarAppTheme</item>
        <item name="android:buttonStyleToggle">@style/ToggleAppTheme</item>

        <item name="actionBarItemBackground">@drawable/selectable_background_br</item>
        <item name="popupMenuStyle">@style/PopupMenu.Br</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Br</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Br</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Br</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Br</item>
        <item name="actionModeBackground">@drawable/cab_background_top_br</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_br</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Br</item>
        <item name="actionOverflowButtonStyle">@style/Theme.Br.Overflow</item>
        <item name="android:listViewStyle">@style/Theme.Br.LightBackground</item>
        <item name="android:gridViewStyle">@style/Theme.Br.LightBackground.GridView</item>

    </style>

    <style name="Theme.Br.LightBackground">
        <item name="android:background">@color/br_light_background</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Theme.Br.LightBackground.GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>
    </style>

    <style name="Theme.Br.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_menu</item>
    </style>

    <style name="ActionBar.Solid.Br" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_br</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_br</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_br</item>
        <item name="progressBarStyle">@style/ProgressBar.Br</item>
        <item name="titleTextStyle">@style/ActionBar.Solid.Br.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.Br.TitleTextStyle" 
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/br_text</item>
    </style>

    <style name="ActionBar.Transparent.Br" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_br</item>
        <item name="progressBarStyle">@style/ProgressBar.Br</item>
    </style>

    <style name="PopupMenu.Br" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_br</item>
    </style>

    <style name="DropDownListView.Br" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_br</item>
    </style>

    <style name="ActionBarTabStyle.Br" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_br</item>
    </style>

    <style name="DropDownNav.Br" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_br</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_br</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_br</item>
    </style>

    <style name="ProgressBar.Br" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_br</item>
    </style>

    <style name="ActionButton.CloseMode.Br" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_br</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Br.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Br</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Br</item>
    </style>

    <!-- My style -->

    <style name="ProgressBarAppTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/apptheme_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/apptheme_progress_indeterminate_horizontal_holo_light
        </item>
    </style>

    <style name="ToggleAppTheme" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/apptheme_btn_toggle_holo_light</item>
    </style>

    <style name="AuthBackground">
        <item name="android:background">@color/br_dark_background</item>
    </style>

    <style name="AuthTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthTitle.AuthSubTitle">
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_below">@+id/tvTitle</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AuthEditFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/tvSubTitle</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/login_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/login_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/login_vertical_padding</item>
    </style>

    <style name="AuthEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/br_hint_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/br_button_custom</item>
        <item name="android:textColor">@color/br_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HomeHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/room_name_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/room_name_vertical_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/br_light_text</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
